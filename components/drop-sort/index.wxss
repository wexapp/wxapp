.sort-wrapper {
}

.sort-wrapper.active {
    bottom: 0;
}
.fixed {
    position: fixed;
    left: 0;
    right: 0;
    z-index: 100;
}

.title {
    background-color: #fff;
    padding-left: 50rpx;
    width: 100%;
    height: 92rpx;
    line-height: 92rpx;
}

.list {
    display: none;
}

.list.active {
    display: block;
}

.item {
    background-color: #fff;
    font-size: 28rpx;
    line-height: 1;
    padding: 30rpx 50rpx;
}

.item.active {
    color: #3B73EA;
}

.mask {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: -100;
    background-color: rgba(0, 0, 0, .6);
    display: none;
}

.mask.active {
    display: block;
}
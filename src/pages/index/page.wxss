page {
    padding-bottom: 100rpx;
}
.swiper {
    width: 100%;
    height: 422rpx;
}
.swiper-item {
    width: 100%;
    height: 100%;
}
.swiper-item > image{
    width: 100%;
    height: 100%;
}
.header-info {
    line-height: 90rpx;
    text-align: center;
}
.header-nav-bar {
    display: block;
    background-color: #fff;
    border-bottom: 1rpx solid #ccc;
}

.content {
    padding: 0 20rpx;
}

.content-title {
    font-size: 40rpx;
    margin: 40rpx auto;
}
.commodity-item {
    display: block;
    border-bottom: 1rpx solid #ccc;
    padding-bottom: 30rpx;
    margin-top: 30rpx;
}

.coupon {
    display: block;
    margin-bottom: 20px;
}
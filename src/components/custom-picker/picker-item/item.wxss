.com-wrapper {
    position: relative;
    height: 100%;
    height: 100%;
    overflow: hidden;
}
.mask {
    position: absolute;
    left: 0;
    right: 0;
    z-index: 100;
    height: 270rpx;
    background-color: #fff;
    opacity: .8;
}
.mask-top {
    top: 0;
    /* background-image: linear-gradient(to bottom, rgba(200, 200, 200, 0.8), rgba(200, 200, 200, .2)); */
    border-bottom: 1rpx solid #ccc;
}
.mask-bottom {
    bottom: 0;
    /* background-image: linear-gradient(to top, rgba(200, 200, 200, 1), rgba(200, 200, 200, .8)); */
    border-top: 1rpx solid #ccc;
}
.flex-wrapper {
    display: flex;
    flex-direction: column;
}
.flex-item {
    flex: 1 1 0;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    text-align: center;
    box-sizing: border-box;
}

.flex-item.active {
    color: red;
}
@import "../../app.wxss";
/* 商品图片部分样式 */
.card-wrapper {
    display: flex;
    align-items: flex-start;
}
.card-wrapper .img-wrapper {
    position: relative;
    width: 200rpx;
    height: 200rpx;
    flex-grow: 0;
    flex-shrink: 0;
}
.card-wrapper .img-wrapper > image {
    position: absolute;
    top: 0;
    left: 0;
}
.commodity-image {
    width: 100%;
    height: 100%;
    z-index: 5;
    border-radius: 50%;
}
.sub-image {
    width: 60rpx;
    z-index: 10;
    max-height: 100%;
    z-index: 10;
    display: none;
}


/* 商品文字部分样式 */
.card-wrapper .text-info {
    flex: 1 1 0;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    font-size: 24rpx;
    color: #333;
    margin-left: 1em;
}
.text-flex-item {
    flex-grow: 1;
    flex-shrink: 0;
    width: 100%;
}

.title {
    font-size: 30rpx;
}

.sub-title {
    color: #aaa;
}
.tag {
    border: 1rpx solid gray;
    border-radius: 6rpx;
    color: gray;
    width: auto;
    padding: 0 .3em;
}
.price {
    color: palevioletred;
}
.vip-price {
    color: red;
}

.cart {
    align-self: flex-end;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: white;
    text-align: center;
    background-color: red;
    border-radius: 50%;
}

.icon-cart {
    font-size: 40rpx;
    font-weight: bold;
}